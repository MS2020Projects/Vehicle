@model IEnumerable<ERP_POC.Models.VendorListVM>

<div class="panel">
    <div class="panel-heading ERP-Color">
        <h2>Vendor List</h2>
    </div>
    <div class="panel-body no-padding" style="display: block;">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VendorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VendorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>
                            <a href="#" onclick="javascript: return Edit(@item.VendorId)"> Edit </a> |
                            <a href="#" onclick="javascript: return Delete(@item.VendorId)"> Delete </a> 
                        </td>
                    </tr>
            }

            </table>
        </div>
    </div>
</div>
<script>

    function Edit(id) {
       
            var JsonData = {
                URL: "../Vendor/Edit",
                DATA: { 'id': id },
                TYPE: "POST",
                DATATYPE: 'HTML',
                PARTIALDIV: ".div_Create",
              }
        
            LoadPartialDiv(JsonData);
           
    }

    function Delete(id){
        if (confirm('Do you want to delete this ?')) {
            var JsonData = {
                URL: "../Vendor/Delete",
                DATA: { 'id': id },
                TYPE: "POST",
                DATATYPE: 'JSON',
            }

            DeleteData(JsonData);
            LoadList();
        }
    }


</script>