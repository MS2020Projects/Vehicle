@model ERP_POC.Models.VendorCreateVM

<div class="panel">
    <div class="panel-heading ERP-Color">
        <h2>Vendor</h2>
    </div>
     

    <form id="frmVendorCreate">

        <div class="panel-body no-padding" style="display: block;">
            <input type="hidden" class="form-control input-sm" name="VendorId" value="@Model.VendorId">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="inputsm">Vendor Name</label>
                        <input class="form-control input-sm" name="VendorName" value="@Model.VendorName" type="text">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="inputsm">Phone Number</label>
                        <input class="form-control input-sm" name="PhoneNumber" value="@Model.PhoneNumber" type="text">
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="inputsm">Small input</label>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="inputsm">Small input</label>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="inputsm">Small input</label>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <button class="btn ERP-btn-success" onclick="javascript: return SaveVendor();" >Save</button>&nbsp;
                        <button class="btn ERP-btn-danger">Reset</button>
                    </div>
                </div>

            </div>
        </div>
    </form>
</div>

<script>
    function SaveVendor() {
        var $this = $("#frmVendorCreate");
        var JsonData = {
            URL: "../Vendor/Create",
            DATA: $this.serialize(),
            TYPE: "POST",
            DATATYPE: 'JSON',
          
        }

      if(  SaveData(JsonData))
         LoadList();
    }
   
 
</script>